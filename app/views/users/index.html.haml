=render "shared/header"
.user-top
  .user-top--title 登録情報
  .user-top--btn
    = link_to "編集", "#", class: "user-top--btn-link"
  .user-top--btn
    = link_to "トップページに戻る", products_path, class: "user-top--btn-link"
  %table.user-top--main
    %tr.user-top--main--nickname
      %th.user-top--main--nickname--left
        .user-top--main--nickname--left--text ニックネーム
      %td.user-top--main--nickname--right
        = @users.nickname
    %tr.user-top--main--fist-name
      %th.user-top--main--fist-name--left
        .user-top--main--fist-name--left--text 苗字
      %td.user-top--main--fist-name--right
        = @users.first_name
    %tr.user-top--main--last-name
      %th.user-top--main--last-name--left
        .user-top--main--last-name--left--text 名前
      %td.user-top--main--last-name--right
        = @users.last_name
    %tr.user-top--main--fist-name-jp
      %th.user-top--main--fist-name-jp--left
        .user-top--main--fist-name-jp--left--text 苗字(フリガナ)
      %td.user-top--main--fist-name-jp--right
        = @users.first_name_jp
    %tr.user-top--main--last-name-jp
      %th.user-top--main--last-name-jp--left
        .user-top--main--last-name-jp--left--text 名前(フリガナ)
      %td.user-top--main--last-name-jp--right
        = @users.last_name_jp
    %tr.user-top--main--address
      %th.user-top--main--address--left
        .user-top--main--address--left--text 住所
      %td.user-top--main--address--right
        = @users.add_ress
  %table.user-vote
    %tbody.user-vote--body
      .user-vote--title 投稿一覧
      -@product.each do |products|
        %tr.user-vote--body--record
          %td.user-vote--body--record--cell タイトル
          %td.user-vote--body--record--cell
            =link_to "#" do
              .cell-title
                = products.title
          %td.user-vote--body--record--cell 投稿日
          %td.user-vote--body--record--cell
            = products.created_at.strftime("%Y年%m月%d日%H:%M")

